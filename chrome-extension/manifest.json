{
  "manifest_version": 3,
  "name": "Tasks Activity Tracker",
  "version": "1.0.0",
  "description": "Track daily tasks, view activity, and quick-add learnings from your browser",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "http://localhost:5600/*",
    "https://api.github.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
